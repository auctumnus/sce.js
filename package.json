  "devDependencies": {
    "@types/lodash.frompairs": "^4.0.6",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "ava": "^3.12.1",
    "concurrently": "^5.3.0",
    "eslint": "^7.7.0",
    "microbundle": "^0.12.4",
    "standardx": "^5.0.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "lodash.frompairs": "^4.0.1"
