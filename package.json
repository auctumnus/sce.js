    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "c8": "^7.11.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.5.0",
    "microbundle": "^0.14.2",
    "prettier": "^2.5.1",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2",
    "uvu": "^0.5.3"
