{
  "name": "sce",
  "version": "1.0.0",
  "description": "Parses and runs Sound Change Engine (SCE) rules.",
  "source": "src/index.ts",
  "main": "dist/sce.js",
  "module": "dist/sce.mjs",
  "typings": "dist/sce.d.ts",
  "unpkg": "dist/sce.umd.js",
  "exports": {
    "require": "./dist/sce.js",
    "default": "./dist/sce.modern.js"
